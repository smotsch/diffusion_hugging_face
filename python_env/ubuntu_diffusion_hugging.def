Bootstrap: docker
From: ubuntu:24.04

%post
    apt update && apt install -y --no-install-recommends \
        git \
        wget \
        build-essential \
        htop \
        && rm -rf /var/lib/apt/lists/*

    pip install --no-cache-dir --upgrade pip setuptools wheel

    pip install --no-cache-dir \
        ipython \
        diffusers>=0.30.0 \
        transformers \
        datasets \
        huggingface_hub \
        tqdm \
        torch \
        torchvision

